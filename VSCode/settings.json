{
    "editor.fontFamily": "PragmataPro",
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.lineHeight": 18,
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "docker.showExplorer": false,
    "workbench.colorTheme": "Nord",
    "workbench.editor.showTabs": true,
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "right",
    "terminal.integrated.fontFamily": "PragmataPro",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.scrollback": 10000,
    "reason.codelens.enabled": false,
    "reason.diagnostics.tools": [
        "merlin",
        "bsb"
    ],
    "reason.path.bsb": "node_modules/.bin/bsb",
    "editor.tokenColorCustomizations": {
        // https://github.com/arcticicestudio/nord-vim/issues/48#issuecomment-330740663
        "textMateRules": [
            {
                "name": "Comment",
                "scope": "comment",
                "settings": {
                    "foreground": "#616e88"
                }
            }
        ]
    },
    "org.todoKeywords": [
      "PLAN",
      "TODO",
      "NEXT",
      "DONE",
      "STALE",
      "CANCELLED",
      "BLOCKED"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "vim.leader": "<Space>",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            // Split line and move the trailing part down
            "before": ["K"],
            "after": ["i", "<CR>", "<Esc>", "k", "$"]
        },
        {
            "before": ["<leader>", "v"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.smartSelect.grow"
                }
            ]
        },
        {
            "before": ["<leader>", "V"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.smartSelect.shrink"
                }
            ]
        }
    ]
  }
